                        <div class="c-dropdown-menu-list__item">
                            <a href="#">Основная сцена</a>
                        </div>
                        <div class="c-dropdown-menu-list__item">
                            <a href="#">Камерная сцена</a>
                        </div>
                    </div>
                </div>
            </div>

            <ul class="afisha-list">
                {# START performances-list__item#}
                <li class="afisha-list__item">
                    <div class="afisha-card">
                        <div class="afisha-card-time">
                            <span class="afisha-card-time__text">29.04  Чт / 17:00</span>
